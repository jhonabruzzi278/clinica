---
// filepath: c:\TRABAJOS\clinica\src\pages\contacto.astro
import MainLayout from '../layouts/MainLayout.astro';
import BannerEmergente from '../components/BannerEmergente.astro';

const whatsappNumber = "56986483379"; 
const whatsappMessage = "¡Hola! Vengo desde la web y me interesa agendar una cita en Clínica Linda Sonrisa ";
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
---

<MainLayout title="Contacto - Clínica Linda Sonrisa">
 
  <BannerEmergente
    hideOnPaths={[]}
    showPolicy="always"
    delayMs={2500}
    version="2025-08-21"
    imageSrc="/images/clinica-og.jpg"
    imageAlt="Clínica Linda Sonrisa"
    title="¿Quieres que te contactemos?"
    message="Déjanos tus datos y te escribiremos a la brevedad."
    ctaHref="/contactanos"
    ctaText="Ir al formulario"
  />

  <main class="min-h-screen bg-gradient-to-br from-teal-50 to-blue-50 py-16 px-4">
    <div class="max-w-2xl mx-auto">
      
      <div class="text-center mb-12">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-green-100 rounded-full mb-6">
          <svg class="w-10 h-10 text-green-600" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">

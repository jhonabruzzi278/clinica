---
import Layout from "~/layouts/MainLayout.astro";
---

<Layout>
  <h1 class="text-xl font-bold mb-4">Regístrate</h1>
  <form action="/api/auth/register" method="POST" class="space-y-4">
    <input type="email" name="email" placeholder="Correo electrónico" required class="border p-2 rounded w-full" />
    <input type="password" name="password" placeholder="Contraseña" required class="border p-2 rounded w-full" />
    <button type="submit" class="bg-teal-600 text-white px-4 py-2 rounded hover:bg-teal-700">Crear cuenta</button>
  </form>
  <p class="mt-4 text-sm">¿Ya tienes una cuenta? <a href="/login" class="text-teal-600 underline">Inicia sesión aquí</a></p>
</Layout>

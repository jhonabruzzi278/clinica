<div class="h-20" aria-hidden="true"></div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const button = document.querySelector('[data-collapse-toggle="navbar-sticky"]');
  const navbar = document.getElementById('navbar-sticky');
  
  if (button && navbar) {
    button.addEventListener('click', function() {
      const expanded = button.getAttribute('aria-expanded') === 'true';
      
      navbar.classList.toggle('hidden');
      button.setAttribute('aria-expanded', (!expanded).toString());
      
      const svg = button.querySelector('svg');
      if (svg) {
        if (navbar.classList.contains('hidden')) {
          svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
          button.setAttribute('aria-label', 'Abrir menú de navegación');
        } else {
          svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6m0 12L6 6"></path>';
          button.setAttribute('aria-label', 'Cerrar menú de navegación');
        }
      }
    });
  }

  const mobileLinks = navbar?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', function() {
      if (window.innerWidth < 768 && navbar) {
        navbar.classList.add('hidden');
        button?.setAttribute('aria-expanded', 'false');
        button?.setAttribute('aria-label', 'Abrir menú de navegación');
        
        const svg = button?.querySelector('svg');
        if (svg) {
          svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
        }
      }
    });
  });

  const currentPath = window.location.pathname;
  const links = document.querySelectorAll('nav a[href]');
  
  links.forEach(link => {
    const href = link.getAttribute('href');
    
    link.classList.remove('text-teal-700', 'bg-teal-50', 'font-semibold');
    link.classList.add('text-gray-700', 'font-medium');
    
    if (href === currentPath || (href === '/' && currentPath === '/')) {
      link.classList.remove('text-gray-700', 'font-medium');
      link.classList.add('text-teal-700', 'font-semibold');
      link.setAttribute('aria-current', 'page');
      
      if (window.innerWidth < 768) {
        link.classList.add('bg-teal-50');
      }
    } else {
      link.removeAttribute('aria-current');
    }
  });

  let lastScrollTop = 0;
  window.addEventListener('scroll', function() {
    const currentScroll = window.pageYOffset || document.documentElement.scrollTop;
    
    if (currentScroll > lastScrollTop && currentScroll > 100) {
      if (navbar && !navbar.classList.contains('hidden')) {
        navbar.classList.add('hidden');
        button?.setAttribute('aria-expanded', 'false');
        button?.setAttribute('aria-label', 'Abrir menú de navegación');
        
        const svg = button?.querySelector('svg');
        if (svg) {
          svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
        }
      }
    }
    
    lastScrollTop = currentScroll <= 0 ? 0 : currentScroll;
  });
});
</script>

<style>
  nav {
    transition: all 0.3s ease-in-out;
  }
  
  nav a {
    transition: all 0.2s ease-in-out;
  }
  
  nav a:hover {
    transform: translateY(-1px);
  }
  
  nav a[href="/contacto"].bg-teal-600 {
    box-shadow: 0 4px 15px rgba(13, 148, 136, 0.3);
  }
  
  nav a[href="/contacto"].bg-teal-600:hover {
    box-shadow: 0 6px 20px rgba(13, 148, 136, 0.4);
    transform: translateY(-2px);
  }
  
  @media (max-width: 640px) {
    .max-w-screen-xl {
      padding: 0.75rem;
    }
    
    nav a[href="/contacto"] {
      padding: 0.5rem 1rem;
      font-size: 0.875rem;
    }
  }
  
  #navbar-sticky {
    transition: all 0.3s ease-in-out;
  }
  
  nav a.text-teal-700::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background-color: #0d9488;
    transition: width 0.3s ease;
  }
  
  @media (min-width: 768px) {
    nav a.text-teal-700 {
      position: relative;
    }
    
    nav a.text-teal-700::after {
      width: 100%;
    }
  }

  button[data-collapse-toggle] svg {
    transition: all 0.3s ease-in-out;
  }

  button[data-collapse-toggle]:hover {
    background-color: rgba(229, 231, 235, 0.5);
  }

  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>
<nav class="bg-white shadow-lg fixed w-full z-20 top-0 start-0 border-b-4 border-teal-500">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <!-- Logo y nombre -->
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse hover:opacity-80 transition-opacity">
      <img src="/images/icono.svg" alt="Linda Sonrisa Logo" class="h-10 w-10" />
      <div>
        <span class="self-center text-2xl font-bold whitespace-nowrap text-teal-700 tracking-tight">Linda Sonrisa</span>
        <p class="text-sm text-gray-600 -mt-1 hidden sm:block">Tu sonrisa es nuestra pasión</p>
      </div>
    </a>

    <!-- Botón CTA y menú móvil -->
    <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
      <!-- Botón CTA -->
      <a 
        href="/contacto" 
        class="text-white bg-teal-600 hover:bg-teal-700 focus:ring-4 focus:outline-none focus:ring-teal-300 font-semibold rounded-full text-sm px-6 py-2 text-center transition-all duration-200 shadow-md hover:shadow-lg transform hover:scale-105"
      >
        <span class="hidden sm:inline">Agendar Cita</span>
        <span class="sm:hidden">Cita</span>
      </a>
      
      <!-- Botón menú móvil -->
      <button 
        data-collapse-toggle="navbar-sticky" 
        type="button" 
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 transition-colors" 
        aria-controls="navbar-sticky" 
        aria-expanded="false"
      >
        <span class="sr-only">Abrir menú principal</span>
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
        </svg>
      </button>
    </div>

    <!-- Menú de navegación -->
    <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-sticky">
      <ul class="flex flex-col p-4 md:p-0 mt-4 font-medium border border-gray-100 rounded-lg bg-gray-50 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-white">
        <li>
          <a href="/" class="block py-2 px-3 text-teal-700 bg-teal-50 rounded md:bg-transparent md:text-teal-700 md:p-0 font-semibold transition-colors duration-200 hover:text-teal-800" aria-current="page">
            Inicio
          </a>
        </li>
        <li>
          <a href="/#servicios" class="block py-2 px-3 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-teal-600 md:p-0 font-medium transition-colors duration-200">
            Servicios
          </a>
        </li>
        <li>
          <a href="/#especialidades" class="block py-2 px-3 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-teal-600 md:p-0 font-medium transition-colors duration-200">
            Especialidades
          </a>
        </li>
        <li>
          <a href="/#testimonios" class="block py-2 px-3 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-teal-600 md:p-0 font-medium transition-colors duration-200">
            Testimonios
          </a>
        </li>
        <li>
          <a href="/contacto" class="block py-2 px-3 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-teal-600 md:p-0 font-medium transition-colors duration-200">
            Contacto
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- Espaciado para compensar el header fijo -->
<div class="h-20"></div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Funcionalidad del menú móvil
  const button = document.querySelector('[data-collapse-toggle="navbar-sticky"]');
  const navbar = document.getElementById('navbar-sticky');
  
  if (button && navbar) {
    button.addEventListener('click', function() {
      const expanded = button.getAttribute('aria-expanded') === 'true';
      
      // Toggle el menú
      navbar.classList.toggle('hidden');
      
      // Actualizar aria-expanded
      button.setAttribute('aria-expanded', (!expanded).toString());
      
      // Cambiar el icono
      const svg = button.querySelector('svg');
      if (svg) {
        if (navbar.classList.contains('hidden')) {
          // Icono hamburguesa
          svg.innerHTML = '<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>';
        } else {
          // Icono X
          svg.innerHTML = '<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>';
        }
      }
    });
  }

  // Cerrar menú móvil al hacer clic en enlaces
  const mobileLinks = navbar?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', function() {
      if (window.innerWidth < 768 && navbar) { // Solo en móvil
        navbar.classList.add('hidden');
        button?.setAttribute('aria-expanded', 'false');
        
        // Restaurar icono hamburguesa
        const svg = button?.querySelector('svg');
        if (svg) {
          svg.innerHTML = '<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>';
        }
      }
    });
  });

  // Resaltar enlace activo basado en la página actual
  const currentPath = window.location.pathname;
  const links = document.querySelectorAll('nav a[href]');
  
  links.forEach(link => {
    const href = link.getAttribute('href');
    
    // Remover clases activas existentes
    link.classList.remove('text-teal-700', 'bg-teal-50', 'font-semibold');
    link.classList.add('text-gray-700', 'font-medium');
    
    // Agregar clases activas si coincide
    if (href === currentPath || (href === '/' && currentPath === '/')) {
      link.classList.remove('text-gray-700', 'font-medium');
      link.classList.add('text-teal-700', 'font-semibold');
      
      // En móvil, agregar fondo
      if (window.innerWidth < 768) {
        link.classList.add('bg-teal-50');
      }
    }
  });

  // Cerrar menú al hacer scroll (opcional)
  let lastScrollTop = 0;
  window.addEventListener('scroll', function() {
    const currentScroll = window.pageYOffset || document.documentElement.scrollTop;
    
    if (currentScroll > lastScrollTop && currentScroll > 100) {
      // Scrolling down - cerrar menú móvil
      if (navbar && !navbar.classList.contains('hidden')) {
        navbar.classList.add('hidden');
        button?.setAttribute('aria-expanded', 'false');
        
        const svg = button?.querySelector('svg');
        if (svg) {
          svg.innerHTML = '<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>';
        }
      }
    }
    
    lastScrollTop = currentScroll <= 0 ? 0 : currentScroll;
  });
});
</script>

<style>
  /* Animaciones suaves */
  nav {
    transition: all 0.3s ease-in-out;
  }
  
  nav a {
    transition: all 0.2s ease-in-out;
  }
  
  /* Efecto hover mejorado */
  nav a:hover {
    transform: translateY(-1px);
  }
  
  /* Botón CTA con efectos especiales */
  nav a[href="/contacto"].bg-teal-600 {
    box-shadow: 0 4px 15px rgba(13, 148, 136, 0.3);
  }
  
  nav a[href="/contacto"].bg-teal-600:hover {
    box-shadow: 0 6px 20px rgba(13, 148, 136, 0.4);
    transform: translateY(-2px);
  }
  
  /* Responsive mejorado */
  @media (max-width: 640px) {
    .max-w-screen-xl {
      padding: 0.75rem;
    }
    
    nav a[href="/contacto"] {
      padding: 0.5rem 1rem;
      font-size: 0.875rem;
    }
  }
  
  /* Animación del menú móvil */
  #navbar-sticky {
    transition: all 0.3s ease-in-out;
  }
  
  /* Indicador visual para página activa */
  nav a.text-teal-700::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background-color: #0d9488;
    transition: width 0.3s ease;
  }
  
  @media (min-width: 768px) {
    nav a.text-teal-700 {
      position: relative;
    }
    
    nav a.text-teal-700::after {
      width: 100%;
    }
  }
</style>
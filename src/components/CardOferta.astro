---
import ofertas from '../content/ofertas.json';
---

<section id="ofertas" class="bg-fondo py-12 px-4">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-2xl sm:text-3xl font-bold text-center text-primary mb-8">
      Promociones Destacadas
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {Array.isArray(ofertas) && ofertas.map((oferta, idx) => (
        <div class="bg-white rounded-lg shadow hover:shadow-md transition overflow-hidden">
          <img src={oferta?.imagen ?? '/images/default.jpg'} alt={oferta?.titulo ?? 'PromociÃ³n'} class="w-full h-40 object-cover" loading="lazy" />

          <div class="p-4">
            <h3 class="text-lg font-semibold text-primary">{oferta?.titulo ?? 'Oferta'}</h3>
            <p class="text-sm text-text-base mb-2">{oferta?.descripcion ?? ''}</p>

            <div class="flex items-center gap-3">
              <span class="text-text-light line-through text-sm">{oferta?.precioOriginal ?? ''}</span>
              <span class="text-xl font-bold text-accent">{oferta?.precioOferta ?? ''}</span>
            </div>

            <a href="#contacto" class="mt-4 inline-block bg-primary text-white px-4 py-2 rounded hover:bg-secondary transition text-sm">
              Agendar ahora
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

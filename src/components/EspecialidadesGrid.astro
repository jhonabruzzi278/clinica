---
import especialidades from '../data/especialidades.json';
---

<section id="especialidades" class="bg-gradient-to-br from-slate-50 to-blue-50 py-20 px-4">
  <div class="max-w-7xl mx-auto">
    <!-- Header Section -->
    <div class="text-center mb-16">
      
      <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">
        Nuestras Especialidades
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Ofrecemos tratamientos dentales de última generación con tecnología avanzada 
        y un equipo de especialistas altamente calificados para cuidar tu sonrisa.
      </p>
    </div>

    <!-- Grid de Especialidades -->
    <div class="especialidades-container">
      {Array.isArray(especialidades) && especialidades.map((esp, idx) => (
        <div class="especialidad-card group">
          <!-- Imagen con efecto blur -->
          <div class="imagen-container">
            <img 
              src={`/images/${esp?.imagen}`}
              alt={esp?.nombre ?? 'Especialidad dental'}
              class="especialidad-imagen"
              loading="lazy"
            />
            <!-- Overlay con gradiente verde-azul -->
            <div class="image-overlay"></div>
          </div>
          
          <!-- Contenido de la card -->
          <div class="especialidad-contenido">
            <!-- Información -->
            <div class="info-container">
              <h3 class="especialidad-titulo">
                {esp?.nombre ?? 'Especialidad'}
              </h3>
              <p class="especialidad-descripcion">
                {esp?.descripcion ?? 'Descripción no disponible.'}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Grid responsivo */
  .especialidades-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  /* Card principal */
  .especialidad-card {
    position: relative;
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .especialidad-card:hover {
    transform: translateY(-12px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  }

  /* Contenedor de imagen */
  .imagen-container {
    position: relative;
    height: 220px;
    overflow: hidden;
  }

  /* Imagen con efectos */
  .especialidad-imagen {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: blur(2px) brightness(0.8) saturate(0.9);
    transition: all 0.5s ease;
    transform: scale(1.1);
  }

  .especialidad-card:hover .especialidad-imagen {
    filter: blur(0px) brightness(1) saturate(1.1);
    transform: scale(1.15);
  }

  /* Overlay con gradiente verde-azul */
  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(16, 185, 129, 0.7) 0%,    /* Verde esmeralda */
      rgba(6, 182, 212, 0.6) 35%,    /* Cyan */
      rgba(59, 130, 246, 0.7) 100%   /* Azul */
    );
    transition: opacity 0.4s ease;
  }

  .especialidad-card:hover .image-overlay {
    opacity: 0;
  }

  /* Contenido */
  .especialidad-contenido {
    position: relative;
    padding: 2rem 1.5rem;
  }

  /* Información */
  .info-container {
    text-align: center;
  }

  .especialidad-titulo {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .especialidad-descripcion {
    color: #64748b;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  /* ===== VISTA MÓVIL CON EFECTO AUTOMÁTICO ===== */
  @media (max-width: 768px) {
    .especialidades-container {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .imagen-container {
      height: 180px;
    }

    .especialidad-contenido {
      padding: 1.5rem 1rem;
    }

    .especialidad-titulo {
      font-size: 1.25rem;
    }

    /* Efecto automático para móvil */
    .especialidad-imagen {
      animation: mobileAutoReveal 4s ease-in-out infinite;
    }

    .image-overlay {
      animation: mobileOverlayFade 4s ease-in-out infinite;
    }

    /* Desactivar hover en móvil */
    .especialidad-card:hover {
      transform: none;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
    }

    .especialidad-card:hover .especialidad-imagen {
      filter: blur(2px) brightness(0.8) saturate(0.9);
      transform: scale(1.1);
    }

    .especialidad-card:hover .image-overlay {
      opacity: 1;
    }
  }

  /* Animaciones de entrada */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Animación automática para móvil - Imagen */
  @keyframes mobileAutoReveal {
    0% {
      filter: blur(2px) brightness(0.8) saturate(0.9);
      transform: scale(1.1);
    }
    50% {
      filter: blur(0px) brightness(1) saturate(1.1);
      transform: scale(1.15);
    }
    100% {
      filter: blur(2px) brightness(0.8) saturate(0.9);
      transform: scale(1.1);
    }
  }

  /* Animación automática para móvil - Overlay */
  @keyframes mobileOverlayFade {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .especialidad-card {
    animation: fadeInUp 0.6s ease forwards;
    opacity: 0;
  }

  .especialidad-card:nth-child(1) { animation-delay: 0.1s; }
  .especialidad-card:nth-child(2) { animation-delay: 0.2s; }
  .especialidad-card:nth-child(3) { animation-delay: 0.3s; }
  .especialidad-card:nth-child(4) { animation-delay: 0.4s; }
  .especialidad-card:nth-child(5) { animation-delay: 0.5s; }
  .especialidad-card:nth-child(6) { animation-delay: 0.6s; }

  /* Delays diferentes para el efecto automático en cada card móvil */
  @media (max-width: 768px) {
    .especialidad-card:nth-child(1) .especialidad-imagen,
    .especialidad-card:nth-child(1) .image-overlay {
      animation-delay: 0s;
    }
    
    .especialidad-card:nth-child(2) .especialidad-imagen,
    .especialidad-card:nth-child(2) .image-overlay {
      animation-delay: 0.7s;
    }
    
    .especialidad-card:nth-child(3) .especialidad-imagen,
    .especialidad-card:nth-child(3) .image-overlay {
      animation-delay: 1.4s;
    }
    
    .especialidad-card:nth-child(4) .especialidad-imagen,
    .especialidad-card:nth-child(4) .image-overlay {
      animation-delay: 2.1s;
    }
    
    .especialidad-card:nth-child(5) .especialidad-imagen,
    .especialidad-card:nth-child(5) .image-overlay {
      animation-delay: 2.8s;
    }
    
    .especialidad-card:nth-child(6) .especialidad-imagen,
    .especialidad-card:nth-child(6) .image-overlay {
      animation-delay: 3.5s;
    }
  }
</style>

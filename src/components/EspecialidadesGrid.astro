---
import especialidades from '../content/especialidades.json';
---

<section id="especialidades" class="bg-gradient-to-br from-slate-50 to-blue-50 py-16 px-4" role="region" aria-labelledby="especialidades-title">
  <div class="max-w-7xl mx-auto">
    <!-- Header Section -->
    <div class="text-center mb-12">
      <h2 id="especialidades-title" class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
        Especialidades Dentales
      </h2>
      <p class="text-base md:text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Tratamientos odontológicos especializados con tecnología avanzada: implantes dentales, ortodoncia, endodoncia, periodoncia y estética dental. Tu sonrisa en manos expertas.
      </p>
    </div>

    <!-- Grid de Especialidades -->
    <div class="especialidades-container" role="list" aria-label="Lista de especialidades dentales">
      {Array.isArray(especialidades) && especialidades.map((especialidad, index) => (
        <article 
          class="especialidad-card animate-slide-up" 
          style={`animation-delay: ${index * 0.1}s`}
          role="listitem" 
          tabindex="0"
          aria-labelledby={`especialidad-${index}-title`}
          aria-describedby={`especialidad-${index}-desc`}
        >
          <!-- Imagen con efecto blur -->
          <div class="imagen-container">
            <img 
              src={`/images/${especialidad?.imagen}`}
              alt={`Especialidad dental: ${especialidad?.nombre} - Tratamiento odontológico profesional`}
              class="especialidad-imagen"
              loading="lazy"
              width="300"
              height="200"
              decoding="async"
            />
            <!-- Overlay con gradiente verde-azul -->
            <div class="image-overlay" aria-hidden="true"></div>
          </div>
          
          <div class="especialidad-contenido">
            <!-- Información -->
            <h3 id={`especialidad-${index}-title`} class="especialidad-titulo">
              {especialidad?.nombre ?? 'Especialidad Dental'}
            </h3>
            <p id={`especialidad-${index}-desc`} class="especialidad-descripcion">
              {especialidad?.descripcion ?? 'Tratamiento odontológico especializado con tecnología de vanguardia.'}
            </p>
            
            <!-- Call to action button -->
            <button 
              class="especialidad-cta"
              aria-label={`Más información sobre ${especialidad?.nombre}`}
              onclick="window.location.href='#contacto'"
            >
              Más información
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </button>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  /* Grid responsivo más compacto */
  .especialidades-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  /* Breakpoints específicos para mejor control */
  @media (min-width: 640px) {
    .especialidades-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.75rem;
    }
  }

  @media (min-width: 768px) {
    .especialidades-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.75rem;
    }
  }

  @media (min-width: 1024px) {
    .especialidades-container {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  @media (min-width: 1280px) {
    .especialidades-container {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* Card principal más compacta */
  .especialidad-card {
    position: relative;
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1), 
                box-shadow 0.3s ease,
                filter 0.3s ease;
    cursor: pointer;
    border: 2px solid transparent;
  }

  .especialidad-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 12px 40px rgba(13, 148, 136, 0.2);
  }

  .especialidad-card:focus {
    outline: none;
    border-color: #0d9488;
    box-shadow: 0 0 0 3px rgba(13, 148, 136, 0.2);
  }

  /* CTA Button */
  .especialidad-cta {
    display: inline-flex;
    align-items: center;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #0d9488, #059669);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    opacity: 0;
    transform: translateY(10px);
  }

  .especialidad-card:hover .especialidad-cta {
    opacity: 1;
    transform: translateY(0);
  }

  .especialidad-cta:hover {
    background: linear-gradient(135deg, #0f766e, #047857);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(13, 148, 136, 0.3);
  }

  .especialidad-cta:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(13, 148, 136, 0.4);
  }

  /* Contenedor de imagen más pequeño */
  .imagen-container {
    position: relative;
    height: 100px;
    overflow: hidden;
    flex-shrink: 0;
    background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
  }

  /* Imagen con efectos */
  .especialidad-imagen {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: blur(0.5px) brightness(0.95) saturate(1.1);
    transition: filter 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transform: scale(1.02);
    will-change: filter, transform;
  }

  .especialidad-card:hover .especialidad-imagen {
    filter: blur(0px) brightness(1.1) saturate(1.2);
    transform: scale(1.08);
  }

  /* Overlay con gradiente verde-azul */
  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(16, 185, 129, 0.4) 0%,
      rgba(6, 182, 212, 0.3) 50%,
      rgba(59, 130, 246, 0.4) 100%
    );
    transition: opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0.6;
  }

  .especialidad-card:hover .image-overlay {
    opacity: 0.2;
  }

  /* Contenido más compacto */
  .especialidad-contenido {
    padding: 0.75rem 0.5rem;
    text-align: center;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: linear-gradient(to bottom, rgba(255,255,255,0.95), white);
  }

  /* Información */
  .especialidad-titulo {
    font-size: 0.8rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.3rem;
    line-height: 1.2;
    letter-spacing: -0.01em;
    text-shadow: 0 1px 2px rgba(0,0,0,0.1);
  }

  .especialidad-descripcion {
    color: #64748b;
    line-height: 1.4;
    font-size: 0.65rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-weight: 400;
  }

  /* Desktop hover effects */
  @media (min-width: 768px) {
    .especialidad-card:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
      filter: brightness(1.05);
    }

    .especialidad-card:hover .especialidad-imagen {
      filter: blur(0px) brightness(1.1) saturate(1.2);
      transform: scale(1.08);
    }

    .especialidad-card:hover .image-overlay {
      opacity: 0.2;
    }

    .imagen-container {
      height: 200px;
    }

    .especialidad-contenido {
      padding: 1.5rem;
    }

    .especialidad-titulo {
      font-size: 1.25rem;
      margin-bottom: 0.75rem;
    }

    .especialidad-descripcion {
      font-size: 0.9rem;
      -webkit-line-clamp: 3;
      line-height: 1.6;
    }
  }

  /* Mobile optimizations */
  @media (max-width: 640px) {
    #especialidades {
      padding: 2.5rem 1rem;
    }

    .especialidad-card {
      border-radius: 12px;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
      transition: transform 0.2s ease;
    }

    .especialidad-card:hover {
      transform: none;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    }

    .especialidad-imagen {
      animation: mobileRevealSmooth 1.5s ease-out forwards;
      animation-fill-mode: both;
    }

    .image-overlay {
      animation: mobileOverlayFadeSmooth 1.5s ease-out forwards;
      animation-fill-mode: both;
    }
  }

  @media (max-width: 480px) {
    .grid {
      gap: 0.5rem;
    }

    .imagen-container {
      height: 90px;
    }

    .especialidad-contenido {
      padding: 0.6rem 0.4rem;
    }

    .especialidad-titulo {
      font-size: 0.75rem;
      margin-bottom: 0.25rem;
    }

    .especialidad-descripcion {
      font-size: 0.6rem;
      -webkit-line-clamp: 1;
    }
  }

  @media (max-width: 360px) {
    .grid {
      gap: 0.4rem;
    }

    .imagen-container {
      height: 80px;
    }

    .especialidad-titulo {
      font-size: 0.7rem;
    }

    .especialidad-descripcion {
      font-size: 0.55rem;
    }
  }

  /* Smooth animations */
  .especialidad-card {
    animation: slideInUp 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
    opacity: 0;
    transform: translateY(30px);
  }

  @keyframes slideInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes mobileRevealSmooth {
    0% {
      filter: blur(1px) brightness(0.9) saturate(0.9);
      transform: scale(1.02);
    }
    100% {
      filter: blur(0px) brightness(1.05) saturate(1.1);
      transform: scale(1.05);
    }
  }

  @keyframes mobileOverlayFadeSmooth {
    0% { opacity: 0.6; }
    100% { opacity: 0.3; }
  }

  /* Staggered animations */
  .especialidad-card:nth-child(1) { animation-delay: 0.1s; }
  .especialidad-card:nth-child(2) { animation-delay: 0.15s; }
  .especialidad-card:nth-child(3) { animation-delay: 0.2s; }
  .especialidad-card:nth-child(4) { animation-delay: 0.25s; }
  .especialidad-card:nth-child(5) { animation-delay: 0.3s; }
  .especialidad-card:nth-child(6) { animation-delay: 0.35s; }
  .especialidad-card:nth-child(7) { animation-delay: 0.4s; }
  .especialidad-card:nth-child(8) { animation-delay: 0.45s; }
  .especialidad-card:nth-child(9) { animation-delay: 0.5s; }

  /* Mobile animation delays */
  @media (max-width: 640px) {
    .especialidad-card:nth-child(1) .especialidad-imagen,
    .especialidad-card:nth-child(1) .image-overlay { animation-delay: 0.2s; }
    
    .especialidad-card:nth-child(2) .especialidad-imagen,
    .especialidad-card:nth-child(2) .image-overlay { animation-delay: 0.3s; }
    
    .especialidad-card:nth-child(3) .especialidad-imagen,
    .especialidad-card:nth-child(3) .image-overlay { animation-delay: 0.4s; }
    
    .especialidad-card:nth-child(4) .especialidad-imagen,
    .especialidad-card:nth-child(4) .image-overlay { animation-delay: 0.5s; }
    
    .especialidad-card:nth-child(5) .especialidad-imagen,
    .especialidad-card:nth-child(5) .image-overlay { animation-delay: 0.6s; }
    
    .especialidad-card:nth-child(6) .especialidad-imagen,
    .especialidad-card:nth-child(6) .image-overlay { animation-delay: 0.7s; }
  }

  /* Performance optimizations */
  .especialidad-card * {
    transform: translateZ(0);
  }

  @media (prefers-reduced-motion: reduce) {
    .especialidad-card,
    .especialidad-imagen,
    .image-overlay {
      animation: none !important;
      transition: none !important;
    }
  }

  /* GPU acceleration */
  .especialidad-card,
  .especialidad-imagen {
    transform: translate3d(0, 0, 0);
  }
</style>

<script>
  // Detectar scroll sobre el componente en móvil
  function initMobileScrollEffect() {
    // Solo ejecutar en móvil
    if (window.innerWidth <= 640) {
      const especialidadesSection = document.getElementById('especialidades');
      const especialidadesContainer = document.querySelector('.grid');
      
      if (!especialidadesSection || !especialidadesContainer) return;
      
      let scrollTimeout: NodeJS.Timeout;
      
      function handleScroll() {
        if (!especialidadesSection) return;
        const rect = especialidadesSection.getBoundingClientRect();
        const isVisible = rect.top < window.innerHeight && rect.bottom > 0;
        
        if (isVisible && especialidadesContainer) {
          // Activar efecto respiración
          especialidadesContainer.classList.add('scrolling');
          
          // Quitar el efecto después de 2 segundos sin scroll
          clearTimeout(scrollTimeout);
          scrollTimeout = setTimeout(() => {
            especialidadesContainer.classList.remove('scrolling');
          }, 2000);
        }
      }
      
      window.addEventListener('scroll', handleScroll, { passive: true });
      
      // Cleanup al cambiar de tamaño
      window.addEventListener('resize', () => {
        if (window.innerWidth > 640) {
          especialidadesContainer?.classList.remove('scrolling');
          window.removeEventListener('scroll', handleScroll);
        }
      });
    }
  }
  
  // Inicializar cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', initMobileScrollEffect);
</script>

---
import especialidades from '../content/especialidades.json';
---

<section id="especialidades" class="bg-gradient-to-br from-slate-50 to-blue-50 py-12 px-3">
  <div class="max-w-7xl mx-auto">
    <!-- Header Section -->
    <div class="text-center mb-8">
      <h2 class="text-2xl md:text-4xl font-bold text-gray-800 mb-2">
        Nuestras Especialidades
      </h2>
      <p class="text-sm md:text-base text-gray-600 max-w-2xl mx-auto leading-relaxed px-2">
        Ofrecemos tratamientos dentales de última generación con tecnología avanzada 
        y un equipo de especialistas altamente calificados para cuidar tu sonrisa.
      </p>
    </div>

    <!-- Grid de Especialidades -->
    <div class="especialidades-container">
      {Array.isArray(especialidades) && especialidades.map((esp, idx) => (
        <div class="especialidad-card group">
          <!-- Imagen con efecto blur -->
          <div class="imagen-container">
            <img 
              src={`/images/${esp?.imagen}`}
              alt={esp?.nombre ?? 'Especialidad dental'}
              class="especialidad-imagen"
              loading="lazy"
            />
            <!-- Overlay con gradiente verde-azul -->
            <div class="image-overlay"></div>
          </div>
          
          
          <div class="especialidad-contenido">
            <!-- Información -->
            <div class="info-container">
              <h3 class="especialidad-titulo">
                {esp?.nombre ?? 'Especialidad'}
              </h3>
              <p class="especialidad-descripcion">
                {esp?.descripcion ?? 'Descripción no disponible.'}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Grid responsivo más compacto */
  .especialidades-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  /* Breakpoints específicos para mejor control */
  @media (min-width: 640px) {
    .especialidades-container {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 768px) {
    .especialidades-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.75rem;
    }
  }

  @media (min-width: 1024px) {
    .especialidades-container {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  @media (min-width: 1280px) {
    .especialidades-container {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* Card principal más compacta */
  .especialidad-card {
    position: relative;
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 6px 25px rgba(0, 0, 0, 0.08);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    border: 1px solid rgba(255, 255, 255, 0.2);
    height: fit-content;
  }

  .especialidad-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 45px rgba(0, 0, 0, 0.12);
  }

  /* Contenedor de imagen más pequeño */
  .imagen-container {
    position: relative;
    height: 160px;
    overflow: hidden;
  }

  /* Imagen con efectos */
  .especialidad-imagen {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: blur(2px) brightness(0.8) saturate(0.9);
    transition: all 0.5s ease;
    transform: scale(1.1);
  }

  .especialidad-card:hover .especialidad-imagen {
    filter: blur(0px) brightness(1) saturate(1.1);
    transform: scale(1.15);
  }

  /* Overlay con gradiente verde-azul */
  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(16, 185, 129, 0.7) 0%,    /* Verde esmeralda */
      rgba(6, 182, 212, 0.6) 35%,    /* Cyan */
      rgba(59, 130, 246, 0.7) 100%   /* Azul */
    );
    transition: opacity 0.4s ease;
  }

  .especialidad-card:hover .image-overlay {
    opacity: 0;
  }

  /* Contenido más compacto */
  .especialidad-contenido {
    position: relative;
    padding: 1.25rem 1rem;
  }

  /* Información */
  .info-container {
    text-align: center;
  }

  .especialidad-titulo {
    font-size: 1.1rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .especialidad-descripcion {
    color: #64748b;
    line-height: 1.5;
    font-size: 0.85rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* MÓVIL - Optimización ultra compacta */
  @media (max-width: 640px) {
    /* Section más compacta */
    #especialidades {
      padding: 2rem 0.75rem;
    }

    /* Header más pequeño */
    .text-center.mb-8 {
      margin-bottom: 1.5rem;
    }

    /* Grid súper compacto */
    .especialidades-container {
      grid-template-columns: repeat(3, 1fr);
      gap: 0.75rem;
      margin-top: 1rem;
    }

    /* Cards más pequeñas */
    .imagen-container {
      height: 90px;
    }

    .especialidad-contenido {
      padding: 0.75rem 0.5rem;
    }

    .especialidad-titulo {
      font-size: 0.8rem;
      margin-bottom: 0.25rem;
      font-weight: 600;
    }

    .especialidad-descripcion {
      font-size: 0.65rem;
      -webkit-line-clamp: 2;
      line-height: 1.3;
    }

    /* Card más pequeña y compacta */
    .especialidad-card {
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
    }

    /* Desactivar hover en móvil */
    .especialidad-card:hover {
      transform: none;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
    }

    .especialidad-card:hover .especialidad-imagen {
      filter: blur(2px) brightness(0.8) saturate(0.9);
      transform: scale(1.1);
    }

    .especialidad-card:hover .image-overlay {
      opacity: 1;
    }

    /* Efecto automático que va del 50% blur a 100% visible */
    .especialidad-imagen {
      animation: mobileReveal 2.5s ease-out forwards;
    }

    .image-overlay {
      animation: mobileOverlayFade 2.5s ease-out forwards;
    }
  }

  /* Móvil extra pequeño (iPhone SE, etc.) */
  @media (max-width: 375px) {
    .especialidades-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.6rem;
    }

    .imagen-container {
      height: 85px;
    }

    .especialidad-contenido {
      padding: 0.6rem 0.4rem;
    }

    .especialidad-titulo {
      font-size: 0.75rem;
    }

    .especialidad-descripcion {
      font-size: 0.6rem;
      -webkit-line-clamp: 2;
    }
  }

  /* Móvil muy muy pequeño */
  @media (max-width: 320px) {
    .especialidades-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.5rem;
    }

    .imagen-container {
      height: 80px;
    }

    .especialidad-contenido {
      padding: 0.5rem 0.3rem;
    }

    .especialidad-titulo {
      font-size: 0.7rem;
      margin-bottom: 0.2rem;
    }

    .especialidad-descripcion {
      font-size: 0.55rem;
      -webkit-line-clamp: 1;
    }
  }

  /* Animaciones de entrada */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Animación móvil: del 50% blur a completamente visible */
  @keyframes mobileReveal {
    0% {
      filter: blur(2px) brightness(0.7) saturate(0.8);
      transform: scale(1.05);
    }
    100% {
      filter: blur(0px) brightness(1) saturate(1.1);
      transform: scale(1.1);
    }
  }

  @keyframes mobileOverlayFade {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }

  .especialidad-card {
    animation: fadeInUp 0.4s ease forwards;
    opacity: 0;
  }

  /* Animaciones más rápidas en móvil */
  @media (max-width: 640px) {
    .especialidad-card:nth-child(1) { animation-delay: 0.05s; }
    .especialidad-card:nth-child(2) { animation-delay: 0.1s; }
    .especialidad-card:nth-child(3) { animation-delay: 0.15s; }
    .especialidad-card:nth-child(4) { animation-delay: 0.2s; }
    .especialidad-card:nth-child(5) { animation-delay: 0.25s; }
    .especialidad-card:nth-child(6) { animation-delay: 0.3s; }
    .especialidad-card:nth-child(7) { animation-delay: 0.35s; }
    .especialidad-card:nth-child(8) { animation-delay: 0.4s; }
    .especialidad-card:nth-child(9) { animation-delay: 0.45s; }
  }

  /* Delays para animación de imagen en móvil */
  @media (max-width: 640px) {
    .especialidad-card:nth-child(1) .especialidad-imagen,
    .especialidad-card:nth-child(1) .image-overlay {
      animation-delay: 0.2s;
    }
    
    .especialidad-card:nth-child(2) .especialidad-imagen,
    .especialidad-card:nth-child(2) .image-overlay {
      animation-delay: 0.35s;
    }
    
    .especialidad-card:nth-child(3) .especialidad-imagen,
    .especialidad-card:nth-child(3) .image-overlay {
      animation-delay: 0.5s;
    }
    
    .especialidad-card:nth-child(4) .especialidad-imagen,
    .especialidad-card:nth-child(4) .image-overlay {
      animation-delay: 0.65s;
    }
    
    .especialidad-card:nth-child(5) .especialidad-imagen,
    .especialidad-card:nth-child(5) .image-overlay {
      animation-delay: 0.8s;
    }
    
    .especialidad-card:nth-child(6) .especialidad-imagen,
    .especialidad-card:nth-child(6) .image-overlay {
      animation-delay: 0.95s;
    }
  }

  /* Mejoras de performance */
  .especialidad-card {
    will-change: transform;
  }

  .especialidad-imagen {
    will-change: filter, transform;
  }

  /* Ocultar scroll horizontal en móvil */
  @media (max-width: 640px) {
    body {
      overflow-x: hidden;
    }
  }
</style>

<script>
  // Detectar scroll sobre el componente en móvil
  function initMobileScrollEffect() {
    // Solo ejecutar en móvil
    if (window.innerWidth <= 640) {
      const especialidadesSection = document.getElementById('especialidades');
      const especialidadesContainer = document.querySelector('.especialidades-container');
      
      if (!especialidadesSection || !especialidadesContainer) return;
      
      let scrollTimeout: NodeJS.Timeout;
      
      function handleScroll() {
        if (!especialidadesSection) return;
        const rect = especialidadesSection.getBoundingClientRect();
        const isVisible = rect.top < window.innerHeight && rect.bottom > 0;
        
        if (isVisible && especialidadesContainer) {
          // Activar efecto respiración
          especialidadesContainer.classList.add('scrolling');
          
          // Quitar el efecto después de 2 segundos sin scroll
          clearTimeout(scrollTimeout);
          scrollTimeout = setTimeout(() => {
            especialidadesContainer.classList.remove('scrolling');
          }, 2000);
        }
      }
      
      window.addEventListener('scroll', handleScroll, { passive: true });
      
      // Cleanup al cambiar de tamaño
      window.addEventListener('resize', () => {
        if (window.innerWidth > 640) {
          especialidadesContainer?.classList.remove('scrolling');
          window.removeEventListener('scroll', handleScroll);
        }
      });
    }
  }
  
  // Inicializar cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', initMobileScrollEffect);
</script>

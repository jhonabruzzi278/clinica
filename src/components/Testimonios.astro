---
import { testimonios } from '../data/testimonios';
---


<section class="py-16 px-6 bg-white text-center" id="testimonios">
  <h2 class="text-2xl sm:text-3xl font-bold text-teal-700 mb-8">Lo que dicen nuestros pacientes</h2>
  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {testimonios.map((item) => (
      <div class="bg-gray-50 p-6 rounded-lg shadow">
        <img src={item.imagen} alt={item.nombre} class="w-24 h-24 rounded-full mx-auto mb-4 object-cover" />
        
        <!-- Valoración con estrellas pequeñas -->
        <div class="flex justify-center mb-3" aria-label="Valoración: 5 de 5 estrellas">
          {[...Array(5)].map((_, index) => (
            <svg 
              class="w-3 h-3 text-yellow-400 fill-current mx-0.5" 
              viewBox="0 0 20 20"
              aria-hidden="true"
            >
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          ))}
        </div>
        
        <p class="text-gray-700 italic">"{item.texto}"</p>
        <h3 class="mt-4 font-semibold text-teal-700">{item.nombre}</h3>
      </div>
    ))}
  </div>
</section>
